#!/bin/sh
# Configure process for a specific AWS profile
#
# Example:
#
#    aws-configure -p profile-to-use
#
# Further information:
# See https://docs.aws.amazon.com/
#

# Set default
profile="consensus-networks-dev"

# Override with PROFILE from .env if set
export $(xargs < .env)
if [ -n "$PROFILE" ]; then
    profile=$PROFILE
fi

# Override with -p arg from command line if set
while getopts p: flag
do
    case "${flag}" in
        p) profile=${OPTARG};;
    esac
done

echo "ðŸ‘¾ Configuring environment for '$profile'"

export AWS_ACCESS_KEY_ID=$(aws configure get aws_access_key_id --profile $profile)
export AWS_SECRET_ACCESS_KEY=$(aws configure get aws_secret_access_key --profile $profile)

if [ -z "$AWS_ACCESS_KEY_ID" ] || [ -z "$AWS_SECRET_ACCESS_KEY" ]; then
    echo "ðŸ™ˆ Could not find AWS credentials for profile '$profile'"
    exit 1
fi